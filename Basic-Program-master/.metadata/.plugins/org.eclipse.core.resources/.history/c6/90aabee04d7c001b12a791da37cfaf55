package com.corejava.revision;

public class Variable {
	public static void main(String[] args) {
		int aamir=50;
		System.out.println(aamir);
		
		/* variable is the name of the memory 
		 * location that can store the data */
		
		
		/*local variable
		
		which variable declared inside the method and constructor and block
		we cannot use access modifiers with local variable
		*/
		 
		/*instance variable 
		
		which variable declared inside class and out side the  method body
		we can use access modifiers with instance variable
		*/
		/*
		 * static variable
		 * 
		 * which variable declared as a static inside the class 
		 * static cannot be local variable
		 */
	}
	

}
